#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include "utnInputs.h"
#include "fecha.h"

int getFecha(eFecha *pArray, char* mensaje, char* mensajeError, int reintentos)
{
	int min;
	int max;
	int ret=0;
	int num;

	while(reintentos>0)
	{
		printf(mensaje);
		printf("Introduzca el Mes (en numero)");
		if(scanf("%d",&num)==1){
		if(num<=max && num>=min)
			{break;}
		}
		fflush(stdin);
		reintentos--;
		printf(mensajeError);
	}
	if(reintentos==0)
	{
		ret=-1;
	}
	else
	{
		ret=0;
		*pArray = num;
	}
		return ret;
}
